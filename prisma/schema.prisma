datasource db {
  provider = "postgresql" // or "postgresql"
  url      = env("DATABASE_URL")
}

generator nextjs {
  provider = "prisma-client-js" // or "prisma-client" if using the new generator
  output   = "app/generated-prisma-client"
}

model User {
  id         String   @id @default(cuid())
  telegramId String   @unique
  firstName  String?
  lastName   String?
  username   String?
  balance    Int      @default(0)
  withdrawalAmount Int @default(0)
  isActive   Boolean  @default(true)
  lastSeenAt DateTime?
  payments     Payment[] @relation("UserById")
  telegramPayments Payment[] @relation("UserByTelegramId")
  invoices   Invoice[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  purchases  Purchase[]
}

model Purchase {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  itemId     String
  itemName   String
  itemSecret String
  createdAt  DateTime @default(now())
}

model Invoice {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  description String
  currency    String
  amount      Int
  status      String   // e.g., "PENDING", "PAID", "CANCELLED"
  payment     Payment?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Payment {
  id                      String   @id @default(cuid())
  userId                  String
  user                    User     @relation("UserById", fields: [userId], references: [id])
  invoiceId               String?  @unique
  invoice                 Invoice? @relation(fields: [invoiceId], references: [id])
  telegramId             String   
  telegramUser            User     @relation("UserByTelegramId", fields: [telegramId ], references: [telegramId])
  transactionId String   @unique
  productName             String
  itemId                  String
  amount                  Int
  status                  String   // e.g., "PENDING", "COMPLETED", "REFUNDED"
  createdAt               DateTime @default(now())

  @@unique([itemId, transactionId], name: "itemid_transactionId")
}
